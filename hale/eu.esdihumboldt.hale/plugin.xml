         point="org.eclipse.ui.importWizards">
      <wizard
            class="eu.esdihumboldt.hale.rcp.wizards.io.SchemaImportWizard"
            icon="icons/sample.gif"
            id="eu.esdihumboldt.hale.rcp.wizards.io.SchemaImportWizard"
            name="Import Schema">
         <description>
            Import a schema from the local file system or from a remote service into the schema explorer.
         </description>
      </wizard>
   </extension> -->

</plugin>
