<?xml version="1.0" encoding="utf-8"?>
<xsd:schema xmlns:sq="http://www.SoilML.org" xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:gmd="http://www.isotc211.org/2005/gmd" xmlns:gml="http://www.opengis.net/gml" targetNamespace="http://www.SoilML.org" elementFormDefault="qualified">
	<xsd:import namespace="http://www.isotc211.org/2005/gmd" schemaLocation="http://www.isotc211.org/2005/gmd/metadataEntity.xsd"/>
	<xsd:import namespace="http://www.opengis.net/gml" schemaLocation="http://www.isotc211.org/2005/gml/basicTypes.xsd"/>
	<xsd:import namespace="http://www.w3.org/2001/XMLSchema" schemaLocation="http://www.w3.org/2001/XMLSchema.xsd"/>
	<xsd:complexType name="PropertyFile_Type">
		<xsd:sequence>
			<xsd:element ref="gmd:MD_Metadata"/>
			<xsd:element name="FeatureTypes" type="sq:FeatureTypes_Type"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:element name="SoilML_PropertyFile" type="sq:PropertyFile_Type"/>
	<xsd:complexType name="FeatureTypes_Type">
		<xsd:annotation>
			<xsd:documentation>List of described FeatureTypes.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="FeatureType" type="sq:FeatureType_Type" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="FeatureType_Type">
		<xsd:annotation>
			<xsd:documentation>Any SoilML FeatureType.
        FeatureTypeName shall correspond with SoilML UML model.
        </xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="FeatureTypeName" type="xsd:NCName"/>
			<xsd:element name="Title" type="xsd:string" minOccurs="0"/>
			<xsd:element name="Description" type="xsd:string" minOccurs="0"/>
			<xsd:element name="XSDTypeName" type="xsd:NCName"/>
			<xsd:element name="Property" type="sq:Property_Type" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID" use="required"/>
	</xsd:complexType>
	<xsd:complexType name="Property_Type">
		<xsd:annotation>
			<xsd:documentation>Property of FeatureType.
        If the property is introduced by SoilML UML model,
        PropertyName shall correspond with SoilML UML model.
        If the property is an association, RelationShip describes its type.
        If the property refers to a code list, CodeList provides its definition.
        Attribute observable determines if the property is observable or not.
        If the property values were gained by a measurement,
        UnitOfMeasurement enumerates units of measurements used in data file.
        </xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="PropertyName" type="xsd:NCName"/>
			<xsd:element name="Title" type="xsd:string" minOccurs="0"/>
			<xsd:element name="Description" type="xsd:string" minOccurs="0"/>
			<xsd:choice minOccurs="0">
				<xsd:element name="RelationShip" type="sq:RelationShip_Type"/>
				<xsd:element name="CodeList" type="sq:CodeList_Type"/>
				<xsd:element name="UnitOfMeasurement" type="gml:UomIdentifier" maxOccurs="unbounded"/>
			</xsd:choice>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID" use="required"/>
		<xsd:attribute name="observable" type="xsd:boolean" use="optional" default="false"/>
	</xsd:complexType>
	<xsd:complexType name="RelationShip_Type">
		<xsd:annotation>
			<xsd:documentation>RelationShip describes type of asociation.
        Type may be one of three values (general association, aggregation, or composition)
        with common UML meaning.
        TargetFeatureTypeRef is a reference to type of target feature. It refers to FeatureTypeName.
        </xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="Type">
				<xsd:simpleType>
					<xsd:restriction base="xsd:string">
						<xsd:enumeration value="association"/>
						<xsd:enumeration value="aggregation"/>
						<xsd:enumeration value="composition"/>
					</xsd:restriction>
				</xsd:simpleType>
			</xsd:element>
			<xsd:element name="TargetFeatureTypeName" type="xsd:Name" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:complexType name="CodeList_Type">
		<xsd:annotation>
			<xsd:documentation>Definition of a code list.
        If the list classifies a numerical value, the numerical type is defined
        by TypeOfClassifiedNumericalValue. Furthermore, NumericalValuesUnit
        may define its unit.
        </xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="TypeOfClassifiedNumericalValue" type="xsd:Name" minOccurs="0"/>
			<xsd:element name="NumericalValuesUnit" type="gml:UomIdentifier" minOccurs="0"/>
			<xsd:element name="CodeListEntry" type="sq:CodeListEntry_Type" maxOccurs="unbounded"/>
		</xsd:sequence>
		<xsd:attribute name="id" type="xsd:ID" use="required"/>
	</xsd:complexType>
	<xsd:complexType name="CodeListEntry_Type">
		<xsd:annotation>
			<xsd:documentation>Definition of a code list entry.
        It consists of a code and its explanation.
        If the code represents a class of numerical values,
        its range is described by minInclusive/minExclusive and/or maxInclusive/maxExclusive.</xsd:documentation>
		</xsd:annotation>
		<xsd:sequence>
			<xsd:element name="Code" type="xsd:string"/>
			<xsd:element name="Explanation" type="xsd:string" minOccurs="0"/>
			<xsd:choice>
				<xsd:element name="minInclusive" type="sq:NumericType" minOccurs="0"/>
				<xsd:element name="minExclusive" type="sq:NumericType" minOccurs="0"/>
			</xsd:choice>
			<xsd:choice>
				<xsd:element name="maxInclusive" type="sq:NumericType" minOccurs="0"/>
				<xsd:element name="maxExclusive" type="sq:NumericType" minOccurs="0"/>
			</xsd:choice>
		</xsd:sequence>
	</xsd:complexType>
	<xsd:simpleType name="NumericType">
		<xsd:union memberTypes="xsd:float xsd:decimal xsd:double"/>
	</xsd:simpleType>
</xsd:schema>
