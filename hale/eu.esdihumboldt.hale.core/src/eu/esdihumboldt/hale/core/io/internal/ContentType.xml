<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
	"http://castor.org/mapping.dtd">
<mapping>
	<class name="eu.esdihumboldt.hale.core.io.internal.ContentTypeDefinition" auto-complete="true">
		<map-to xml="contentType" />
	
		<field name="identifier" type="string" required="true">
			<bind-xml name="id" node="attribute" />
		</field>
		
		<field name="defaultName" type="string" required="true">
			<bind-xml name="defaultName" node="element" />
		</field>
		
		<field name="names" collection="map" required="false">
			<bind-xml name="name">
				<class name="org.exolab.castor.mapping.MapItem">
					<field name="key" type="locale">
						<bind-xml name="locale" node="element" />
					</field>
					<field name="value"
						type="string">
						<bind-xml name="value" node="element" />
					</field>
				</class>
			</bind-xml>
		</field>
		
		<field name="fileExtensions" 
			type="string" collection="set" required="false">

			<bind-xml name="fileExtension" node="element" />
		</field>
		
		<field name="testerClassName" type="string" required="false">
			<bind-xml name="testerClass" node="element" />
		</field>
	</class>
</mapping>
