<?xml version="1.0"?>
<!DOCTYPE mapping PUBLIC "-//EXOLAB/Castor Mapping DTD Version 1.0//EN"
	"http://castor.org/mapping.dtd">
<mapping>
	<class name="eu.esdihumboldt.hale.core.io.project.Project" auto-complete="true">
		<map-to xml="hale-project" />
	
		<field name="name" type="string" required="true">
			<bind-xml name="name" node="element" />
		</field>
		
		<field name="author" type="string" required="false">
			<bind-xml name="author" node="element" />
		</field>
		
		<field name="haleVersion" type="string" handler="eu.esdihumboldt.hale.core.io.project.internal.VersionFieldHandler">
			<bind-xml name="version" node="attribute" />
		</field>
		
		<field name="created" type="date" required="false">
			<bind-xml name="created" node="element" />
		</field>
		
		<field name="modified" type="date" required="false">
			<bind-xml name="modified" node="element" />
		</field>
		
		<field name="configurations" 
			type="eu.esdihumboldt.hale.core.io.project.IOConfiguration" collection="arraylist" required="false">

			<bind-xml name="configuration" node="element" />
		</field>
	</class>
	<class name="eu.esdihumboldt.hale.core.io.project.IOConfiguration" auto-complete="true">
	
		<field name="advisorId" type="string" required="true">
			<bind-xml name="advisor-id" node="attribute" />
		</field>
		
		<field name="providerId" type="string" required="true">
			<bind-xml name="provider-id" node="attribute" />
		</field>
		
		<field name="providerConfiguration" collection="map" required="false">
			<bind-xml name="setting">
				<class name="org.exolab.castor.mapping.MapItem">
					<field name="key" type="string">
						<bind-xml name="name" node="attribute" />
					</field>
					<field name="value"
						type="string">
						<bind-xml name="value" node="element" />
					</field>
				</class>
			</bind-xml>
		</field>
		
		<field name="dependencies" 
			type="string" collection="set" required="false">

			<bind-xml name="depends-on" node="element" />
		</field>
		
		<field name="location" type="string" handler="eu.esdihumboldt.hale.core.io.project.internal.URIFieldHandler" required="true">
			<bind-xml name="location" node="element" />
		</field>
	</class>
</mapping>
