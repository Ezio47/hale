<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eu.esdihumboldt.hale.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="eu.esdihumboldt.hale.rcp.ClientPerspective"
            id="eu.esdihumboldt.hale.rcp.ClientPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Map Viewer"
            class="eu.esdihumboldt.hale.rcp.views.MapView"
            id="eu.esdihumboldt.hale.rcp.views.MapView">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.tasks.TasklistView"
            id="eu.esdihumboldt.hale.rcp.views.tasks.TasklistView"
            name="Tasklist">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.model.ModelNavigationView"
            id="eu.esdihumboldt.hale.rcp.views.model.ModelNavigationView"
            name="Schema Explorer">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.model.AttributeView"
            id="eu.esdihumboldt.hale.rcp.views.model.AttributeView"
            name="Attribute View">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.TableView"
            id="eu.esdihumboldt.hale.rcp.views.TableView"
            name="Table View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commandHandlers.LoadSchemaHandler"
            description="Load a Source or Target Schema"
            id="HALE.loadSchema.command"
            name="Load Schema">
      </command>
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commandHandlers.OpenProjectHandler"
            description="Open an existing alignment project"
            id="HALE.openProject.command"
            name="openProject">
      </command>
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commandHandlers.ExitHandler"
            description="Exit HALE"
            id="HALE.exit.command"
            name="exit">
      </command>
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commandHandlers.LoadInstanceDataHandler"
            id="HALE.openInstanceData.command"
            name="Open Instance Data">
      </command>
      <command
            id="HALE.openReferenceData.command"
            name="Open Reference Data">
      </command>
      <command
            id="HALE.saveAlignmentProjectAs.command"
            name="Save Alignment Project As">
      </command>
      <command
            id="HALE.saveMappingAs.command"
            name="Save mapping As">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <command
                  commandId="HALE.openProject.command"
                  id="openProject"
                  label="Open Alignment Project"
                  style="push">
            </command>
            <command
                  commandId="HALE.loadSchema.command"
                  id="loadSchema"
                  label="Open Schema"
                  style="push"
                  tooltip="Open a Source or Target Schema">
            </command>
            <command
                  commandId="HALE.openInstanceData.command"
                  id="openInstanceData"
                  label="Open Instance Data "
                  style="push"
                  tooltip="Load Data that is to be transformed">
            </command>
            <command
                  commandId="HALE.openReferenceData.command"
                  id="openReferenceData"
                  label="Open Reference Data"
                  style="push"
                  tooltip="Open Reference Data against which Instance Data should be harmonized">
            </command>
            <separator
                  name="HALE.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="HALE.saveAlignmentProjectAs.command"
                  id="saveAlignmentProjectAs"
                  label="Save Alignment Project as..."
                  style="push">
            </command>
            <command
                  commandId="HALE.saveMappingAs.command"
                  id="saveMappingAs"
                  label="Save Mapping As..."
                  style="push">
            </command>
            <separator
                  name="HALE.separator2"
                  visible="true">
            </separator>
            <command
                  commandId="HALE.exit.command"
                  id="exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="eu.esdihumboldt.hale.rcp.services.InstanceAbstractServiceFactory">
         <service
               serviceClass="eu.esdihumboldt.hale.models.InstanceService"></service>
         <service
               serviceClass="eu.esdihumboldt.hale.models.SchemaService">
         </service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="eu.esdihumboldt.hale.rcp.HaleSplashHandler"
            id="HALE.splashHandler">
      </splashHandler>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="HALE.application"
            name="HUMBOLDT Alignment Editor">
         <property
               name="appName"
               value="HUMBOLDT Alignment Editor">
         </property>
      </product>
   </extension>
    <extension
         name="FunctionWizard"
         point="org.eclipse.ui.newWizards">
      <category
            id="HALE.wizard.function.numeric"
            name="Numeric Type Functions">
      </category>
      <category
            id="HALE.wizard.function.literal"
            name="Literal Type Functions ">
      </category>
      <category
            id="HALE.wizard.function.enumeration"
            name="Enumeration Type Functions">
      </category>
      <category
            id="HALE.wizard.function.multiple"
            name="Multitype Functions">
      </category>
      <category
            id="HALE.wizard.function.geometric"
            name="Geometric Type Functions">
      </category>
      <wizard
            category="HALE.wizard.function.geometric"
            class="eu.esdihumboldt.hale.rcp.wizards.functions.geometric.NetworkExpansionFunctionWizard"
            icon="icons/see_geometry_attribute.png"
            id="HALE.netexpansion"
            name="Network expansion (Line to Surface)">
      </wizard>
      <wizard
            category="HALE.wizard.function.geometric"
            class="eu.esdihumboldt.hale.rcp.wizards.functions.geometric.NetworkFusionFunctionWizard"
            icon="icons/see_geometry_attribute.png"
            id="HALE.netfusion"
            name="Network fusion (Line to Line)">
      </wizard>
      <wizard
            category="HALE.wizard.function.geometric"
            class="eu.esdihumboldt.hale.rcp.wizards.functions.geometric.NetworkGeneralizationFunctionWizard"
            icon="icons/see_geometry_attribute.png"
            id="HALE.netgeneralization"
            name="Network generalization (Line to Line)">
      </wizard>
   </extension>
