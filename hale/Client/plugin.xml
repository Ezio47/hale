<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="eu.esdihumboldt.hale.rcp.Application">
         </run>
      </application>
   </extension>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            name="Perspective"
            class="eu.esdihumboldt.hale.rcp.ClientPerspective"
            id="eu.esdihumboldt.hale.rcp.ClientPerspective">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            name="Map Viewer"
            class="eu.esdihumboldt.hale.rcp.views.MapView"
            id="eu.esdihumboldt.hale.rcp.views.MapView">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.tasks.TasklistView"
            id="eu.esdihumboldt.hale.rcp.views.tasks.TasklistView"
            name="Tasklist">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.model.ModelNavigationView"
            id="eu.esdihumboldt.hale.rcp.views.model.ModelNavigationView"
            name="Schema Explorer">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.model.AttributeView"
            id="eu.esdihumboldt.hale.rcp.views.model.AttributeView"
            name="Attribute View">
      </view>
      <view
            class="eu.esdihumboldt.hale.rcp.views.TableView"
            id="eu.esdihumboldt.hale.rcp.views.TableView"
            name="Table View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commands.LoadSchemaHandler"
            description="Load a Source or Target Schema"
            id="HALE.loadSchema.command"
            name="Load Schema">
      </command>
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commands.OpenProjectHandler"
            description="Open an existing alignment project"
            id="HALE.openProject.command"
            name="openProject">
      </command>
      <command
            defaultHandler="eu.esdihumboldt.hale.rcp.commands.ExitHandler"
            description="Exit HALE"
            id="HALE.exit.command"
            name="exit">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="menu:org.eclipse.ui.main.menu">
         <menu
               id="file"
               label="File">
            <command
                  commandId="HALE.openProject.command"
                  id="openProject"
                  label="Open Alignment Project"
                  style="push">
            </command>
            <command
                  commandId="HALE.loadSchema.command"
                  id="loadSourceSchema"
                  label="Load a Source Schema"
                  style="push">
            </command>
            <command
                  commandId="HALE.loadSchema.command"
                  id="loadTargetSchema"
                  label="Load a Target Schema"
                  style="push">
            </command>
            <separator
                  name="HALE.separator1"
                  visible="true">
            </separator>
            <command
                  commandId="HALE.exit.command"
                  id="exit"
                  label="Exit"
                  style="push">
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.services">
      <serviceFactory
            factoryClass="eu.esdihumboldt.hale.rcp.services.InstanceAbstractServiceFactory">
         <service
               serviceClass="eu.esdihumboldt.hale.models.InstanceService"></service>
         <service
               serviceClass="eu.esdihumboldt.hale.models.SchemaService">
         </service>
      </serviceFactory>
   </extension>
   <extension
         point="org.eclipse.ui.splashHandlers">
      <splashHandler
            class="eu.esdihumboldt.hale.rcp.HaleSplashHandler"
            id="HALE.splashHandler">
      </splashHandler>
   </extension>
   <extension
         id="esdihumboldt_HALE"
         point="org.eclipse.core.runtime.products">
      <product
            application="org.eclipse.emf.codegen.ecore.Generator"
            name="HUMBOLDT Alignment Editor">
         <property
               name="appName"
               value="HUMBOLDT Alignment Editor">
         </property>
      </product>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="HALE.application"
            name="HUMBOLDT Alignment Editor">
         <property
               name="appName"
               value="HUMBOLDT Alignment Editor">
         </property>
      </product>
   </extension>
   <extension
         point="org.eclipse.ui.importWizards">
      <wizard
            class="eu.esdihumboldt.hale.rcp.wizards.io.SchemaImportWizard"
            icon="icons/sample.gif"
            id="eu.esdihumboldt.hale.rcp.wizards.io.SchemaImportWizard"
            name="Import Schema">
         <description>
            Import a schema from the local file system or from a remote servcie into the schema explorer.
         </description>
         <selection class="org.eclipse.core.resources.IResource"/> 
      </wizard>
   </extension>

</plugin>
