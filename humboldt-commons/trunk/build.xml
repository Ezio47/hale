<?xml version="1.0" encoding="UTF-8"?>
<project name="eu.esdihumboldt.commons" default="generate" basedir=".">

	<taskdef name="xjc" classname="com.sun.tools.xjc.XJCTask">
		<classpath>
		   <pathelement path="../hale-platform/target/com.sun.xml.bind/com.springsource.com.sun.tools.xjc-2.1.7.jar"/>
		   <pathelement path="../hale-platform/target/com.sun.xml.bind/com.springsource.com.sun.xml.bind-2.1.7.jar"/>
		</classpath>	
	</taskdef>	
	<target name="clean">
		<delete dir="target/generated-sources/xjc"/>
	</target>	
	<target name= "generate" description="generates jaxb-based oml-library" depends="clean">
		<mkdir dir="target/generated-sources/xjc"/>
		  <xjc destdir="target/generated-sources/xjc">  
		   	<schema dir="src/main/resource/schema" includes="align.xsd,configuration.xsd"/>
		  	<binding dir="src/main/resource/jxbbinding" includes="bindings.xjb"/>
		  </xjc>
	</target>

</project>
